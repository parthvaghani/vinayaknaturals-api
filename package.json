{
  "name": "finflex-api",
  "version": "1.7.0",
  "bin": "bin/createNodejsApp.js",
  "main": "src/index.js",
  "author": "ripplestacks",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "cross-env NODE_ENV=development jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "prepare": "husky",
    "start:offline": "serverless offline --config serverless.yml",
    "seed:data": "node src/seed/importData.js",
    "seed:testimonials": "node src/seed/importTestimonials.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "node",
    "node.js",
    "generator",
    "express",
    "rest",
    "api",
    "mongodb",
    "mongoose",
    "es6",
    "es7",
    "es8",
    "es9",
    "jest",
    "travis",
    "docker",
    "joi",
    "prettier"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.591.0",
    "@faker-js/faker": "^8.4.1",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.0",
    "dotenv": "16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "7.2.0",
    "helmet": "7.1.0",
    "http-status": "^1.4.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "9.0.2",
    "moment": "^2.24.0",
    "mongoose": "8.3.2",
    "morgan": "^1.9.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.3.1",
    "otplib": "^12.0.1",
    "pm2": "^5.1.0",
    "qrcode": "^1.5.4",
    "sendotp": "^1.2.9",
    "serverless-http": "^3.2.0",
    "swagger-jsdoc": "^6.0.8",
    "swagger-ui-express": "5.0.0",
    "validator": "^13.0.0",
    "winston": "^3.2.1",
    "xlsx": "^0.18.5",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "coveralls": "^3.0.7",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "faker": "^5.1.0",
    "globals": "^15.1.0",
    "husky": "7.0.4",
    "jest": "29.7.0",
    "node-mocks-http": "^1.8.0",
    "nodemon": "3.1.0",
    "prettier": "^3.2.5",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.5.0",
    "supertest": "^6.0.1"
  }
}
